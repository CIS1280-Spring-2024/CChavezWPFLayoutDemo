<Window x:Class="CChavezWPFLayoutDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CChavezWPFLayoutDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Button x:Name="btnStackPanel" Content="StackPanelDemo" 
        HorizontalAlignment="Center" Margin="0,100,0,0" 
        VerticalAlignment="Top" Width="148" Click="btnStackPanel_Click" />
        <Button x:Name="btnWrapPannel" Content="WrapPannelDemo" 
        HorizontalAlignment="Center" Margin="0,150,0,0" 
        VerticalAlignment="Top" Width="148" Click="btnWrapPannel_Click" />
        <Button x:Name="btnCanvasPannel" Content="CanvasPannelDemo" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" Width="148" Click="btnCanvasPannel_Click" />
        <Button x:Name="btnDockPannel" Content="DockPannelDemo" 
            HorizontalAlignment="Center" Margin="0,250,0,0" 
            VerticalAlignment="Top" Width="148" Click="btnDockPannel_Click" />
        <Button x:Name="btnGridDemo" Content="GridDemo" 
            HorizontalAlignment="Center" Margin="0,300,0,0" 
            VerticalAlignment="Top" Width="148" Click="btnGridDemo_Click" />
    </Grid>
</Window>
